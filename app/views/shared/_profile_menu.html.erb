    Password
    <input type="text" class="grow" placeholder="*********"/>
    </label>
</label>

<div class="flex justify-center">
    <div class="border border-black  w-8 rounded-lg m-4 flex items-center justify-center aspect-square">
        <%= lucide_icon("pencil", class: "h-4 w-4") %>        
    </div>
    <div class="border border-black  w-8 rounded-lg m-4 flex items-center justify-center aspect-square">
        <%= lucide_icon("log-out", class: "h-4 w-4") %>        
    </div>
</div>



