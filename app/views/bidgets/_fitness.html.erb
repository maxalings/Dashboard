<div id="main_page" class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full h-full p-5 bg-purple-light items-stretch">
  <!-- Left Column: Countdown and Progress -->
  <div class="space-y-6 flex flex-col h-full">
    <!-- Fitness Countdown -->
    <div class="p-5 border-purple-dark rounded-lg shadow-md">
      <%= render "widgets/fitness_countdown", service: service %>
    </div>

    <!-- Fitness Progress -->
    <div class="p-5 border-purple-dark rounded-lg shadow-md">
      <%= render "widgets/fitness_progress", widget: service.widget %>
    </div>
  </div>

  <!-- Right Column: Routine Tasks -->
  <div class="p-5 border-purple-dark rounded-lg shadow-md flex flex-col overflow-y-scroll h-[571px]">
    <%= render "widgets/fitness_task", widget: service.widget, tasks: service.tasks %>
  </div>
</div>
