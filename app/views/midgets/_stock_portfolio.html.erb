<div class="bg-green-light h-full w-full rounded-lg p-4 flex flex-col justify-center items-center">
  <p class="text-xl font-semibold text-green-dark">
    <%= number_to_currency service.total_value %>
  </p>
  <% if service.percentage_change.positive? %>
    <p class="text-green-500 font-medium flex items-center font-urbanist">
      <span class="text-lg mr-1">▲</span>
      <%= service.percentage_change %>%
    </p>
  <% else %>
    <p class="text-red-500 font-medium flex items-center font-urbanist">
      <span class="text-lg mr-1">▼</span>
      <%= service.percentage_change %>%
    </p>
  <% end %>
</div>
