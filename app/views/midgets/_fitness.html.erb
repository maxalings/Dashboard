<div class="bg-purple-light h-full w-full rounded-lg p-3 flex flex-col justify-center items-center">
  <!-- Section Title: Fitness -->
  <h2 class="text-2xl font-bold mb-4 text-gray-800">Fitness</h2>

  <!-- Next Race Countdown -->
  <div class="mb-6">
    <p class="text-lg font-semibold mb-2 text-gray-600">Next race is in...</p>
    <%#= render "tasks/race_countdown" %>
    <div class="bg-neutral rounded-box text-neutral-content flex p-2">
      <span class="countdown font-mono text-5xl">
        <span style="--value:<%= @days %>;"></span>
      </span>
      days
    </div>
  </div>

  <!-- Progress Bar -->
  <div class="mb-6">
    <p class="text-lg font-semibold mb-2 text-gray-600">Progress bars for goal tracking:</p>
    <progress class="progress progress-success w-full" value="50" max="100"></progress>
    <div class="flex justify-between mt-2 text-sm text-gray-500">
      <p class="order-first">0</p>
      <p class="order-last">300km</p>
    </div>
  </div>

  <!-- Routine Tasks -->
  <div>
    <p class="text-lg font-semibold mb-2 text-gray-600">Routine Tasks:</p>
    <% service.tasks.each do |task| %>
      <% today = Date.today.strftime("%A").downcase %>
      <% if task.send(today) %>
        <div class="p-2 mb-4 border-b border-gray-200">
          <!-- Task Checkbox and Title -->
          <div class="flex items-center space-x-3">
            <input type="checkbox" id="task_<%= task.id %>" class="form-checkbox h-5 w-5 text-blue-600">
            <label for="task_<%= task.id %>" class="text-base font-semibold text-gray-800"><%= task.title %></label>
          </div>

          <!-- Days of the week -->
          <p class="text-xs text-gray-600 mt-1">
            <%= "Monday" if task.monday %>
            <%= "Tuesday" if task.tuesday %>
            <%= "Wednesday" if task.wednesday %>
            <%= "Thursday" if task.thursday %>
            <%= "Friday" if task.friday %>
            <%= "Saturday" if task.saturday %>
            <%= "Sunday" if task.sunday %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
