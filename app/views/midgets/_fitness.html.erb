<div class="bg-purple-light h-full w-full rounded-lg p-6 space-y-8 max-h-64 overflow-y-scroll">
  <!-- Fitness Section -->
  <div class="flex-1 relative">
    <!-- Section Title -->
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Fitness</h1>

    <!-- Routine Tasks -->
    <p class="text-lg font-semibold text-gray-600 mb-3">Routine Tasks:</p>
    <div class="space-y-4">
      <% service.tasks.each do |task| %>
        <% today = Date.today.strftime("%A").downcase %>
        <% if task.send(today) %>
          <div
            class="task-item flex flex-col space-y-3 p-4 bg-white shadow-sm rounded-lg hover:shadow-md transition-shadow"
            data-id="<%= task.id %>"
          >
            <!-- Task Checkbox and Title -->
            <div class="flex items-center space-x-3">
              <input
                type="checkbox"
                id="task_<%= task.id %>"
                class="form-checkbox h-5 w-5 text-blue-600 task-checkbox"
                <%= 'checked' if task.done %>
              >
              <label
                for="task_<%= task.id %>"
                class="text-base font-medium text-gray-800"
              >
                <%= task.title %>
              </label>
            </div>

            <!-- Days of the Week -->
            <div class="flex flex-wrap gap-2">
              <% ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'].each do |day| %>
                <% if task.send(day) %>
                  <span class="text-xs text-gray-600 bg-gray-200 px-2 py-1 rounded-full capitalize">
                    <%= day.capitalize %>
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Next Race Countdown -->
  <div>
    <!-- Countdown Container -->
    <div class="absolute top-3 right-3 bg-gradient-to-r bg-purple-dark text-white shadow-lg rounded-lg p-3 flex flex-col items-center space-y-2">
    <!-- Countdown Number -->
    <span class="countdown font-mono text-4xl font-bold">
      <span style="--value:<%= Race.where(id: 1) %>;"></span>
    </span>
    <!-- Countdown Label -->
    <p class="text-sm uppercase tracking-wider text-2xl">Days Til Race</p>
    </div>



  </div>
</div>
