<div id="fitness-left-column" >
<%# 1 fitness profile %>
  <div class="card bg-white shadow-xl w-1/3 p-4">
    <div class="flex justify-between items-center">
      <div class="radial-progress bg-primary text-primary-content border-primary border-4 w-24 h-24" style="--value:40;" role="progressbar">
          40%
      </div>
      <div class="radial-progress bg-primary text-primary-content border-primary border-4 w-24 h-24" style="--value:70;" role="progressbar">
          70%
      </div>
      <div class="radial-progress bg-primary text-primary-content border-primary border-4 w-24 h-24" style="--value:70;" role="progressbar">
          70%
      </div>
    </div>
  </div>
  <br>
<%# 2 training progress %>
  <div class="card bg-white shadow-xl w-1/3 p-4">
    <h1 class="text-xl font-bold mb-4">Goal Setting</h1>
    <p class="mb-2">Progress bars for goal tracking:</p>
    <progress class="progress progress-success w-full" value="50" max="100"></progress>
    <div class="flex justify-between mt-2">
      <p class="order-first">0</p>
      <p class="order-last">300km</p>
    </div>
  </div>
  <br>
<%# 3 race countdown %>
  <%= render "fitness_countdown" %>

<br>
<%# 4 routine setting progress %>
<div id="fitness-right-column">
  <%= render "fitness_task" %>
</div>

</div>

<br>
<div>
  <%= render "fitness_midget" %>
</div>
