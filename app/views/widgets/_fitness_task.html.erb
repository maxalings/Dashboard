    <div class="card bg-white shadow-xl p-4">
      <h1 class="text-xl font-bold mb-4">Routine Setting</h1>
      <p class="mb-4">This is to set your daily/weekly routine on workouts.</p>
      <%= turbo_frame_tag "new_routine" do %>
        <ul>
          <li class="mb-2">
            <div class="flex flex-col space-y-4">
                <% tasks.each do |task| %>
                  <div class="p-2">
                    <input type="checkbox" id="cardio1" class="form-checkbox h-5 w-5">
                    <label for="cardio1" class="text-base font-semibold"><%= task.title %></label>
                    <p class="text-xs text-gray-600">
                      <%= "Monday" if task.monday %>
                      <%= "Tuesday" if task.tuesday %>
                      <%= "Wednesday" if task.wednesday %>
                      <%= "Thursday" if task.thursday %>
                      <%= "Friday" if task.friday %>
                      <%= "Saturday" if task.saturday %>
                      <%= "Sunday" if task.sunday %>
                    </p>
                  </div>
                <% end %>
            </div>
          </li>
        </ul>
        <%= link_to "Add", widget_new_routine_path(widget), class:"btn btn-primary" %>
      <% end %>
    </div>
