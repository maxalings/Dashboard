<div class="card rounded-lg overflow-scroll max-h-[430px]">
  <h3 class="font-bold text-purple-dark uppercase">Routine setting</h3>
  <p class="mb-6">Set your daily/weekly routine for workouts below: </p>

  <%= turbo_frame_tag "new_routine" do %>
    <ul>
      <% tasks.each do |task| %>
        <li class="mb-3 py-2 px-4 rounded-lg bg-purple-dark shadow-center">
            <div class="flex items-center justify-between">
              <div>
                <span class="flex items-center mb-1">
                  <input type="checkbox" id="task_<%= task.id %>" class="form-checkbox mr-3 h-5 w-5">
                  <label for="task_<%= task.id %>" class="text-base font-semibold text-purple-light"><%= task.title %></label>
                </span>
                <span>
                  <% ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'].each do |day| %>
                    <% if task.send(day) %>
                      <span class="mr-2 text-xs text-purple-dark bg-purple-light px-2 py-1 rounded-md uppercase">
                      <%= day.capitalize %>
                      </span>
                    <% end %>
                  <% end %>
                </span>
              </div>
              <%= link_to lucide_icon('trash-2'), widget_routine_delete_path(widget, task), data: {turbo_method: :delete}, class: 'text-purple-light focus:outline-none'  %>
            </div>
          </li>
      <% end %>
    </ul>

    <div class="flex">
      <%= link_to "Add New Routine", widget_new_routine_path(widget), class: "btn text-white bg-purple-dark hover:bg-gray-400 px-4 py-2 rounded-md shadow-md" %>
    </div>
  <% end %>
</div>
