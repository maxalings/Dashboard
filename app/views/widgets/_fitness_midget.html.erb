<%# for coding purposes, to display on the big widget page %>
<div class="card bg-white shadow-xl w-1/3 p-6 rounded-lg">
  <!-- Section Title: Fitness -->
  <h1 class="text-2xl font-bold mb-4 text-gray-800">Fitness</h1>

  <!-- Next Race Countdown -->
  <div class="mb-6">
    <h2 class="text-lg font-semibold mb-2 text-gray-600">Next race is in...</h2>
    <%= render "tasks/race_countdown" %>
  </div>

  <!-- Progress Bar -->
  <div class="mb-6">
    <h2 class="text-lg font-semibold mb-2 text-gray-600">Progress bars for goal tracking:</h2>
    <progress class="progress progress-success w-full" value="50" max="100"></progress>
    <div class="flex justify-between mt-2 text-sm text-gray-500">
      <p class="order-first">0</p>
      <p class="order-last">300km</p>
    </div>
  </div>

  <!-- Routine Tasks -->
  <div>
    <h2 class="text-lg font-semibold mb-2 text-gray-600">Routine Tasks:</h2>
    <% @tasks.each do |task| %>
      <% today = Date.today.strftime("%A").downcase %>
      <% if task.send(today) %>
        <div class="p-2 mb-4 border-b border-gray-200">
          <!-- Task Checkbox and Title -->
          <div class="flex items-center space-x-3">
            <input type="checkbox" id="task_<%= task.id %>" class="form-checkbox h-5 w-5 text-blue-600">
            <label for="task_<%= task.id %>" class="text-base font-semibold text-gray-800"><%= task.title %></label>
          </div>

          <!-- Days of the week -->
          <p class="text-xs text-gray-600 mt-1">
            <%= "Monday" if task.monday %>
            <%= "Tuesday" if task.tuesday %>
            <%= "Wednesday" if task.wednesday %>
            <%= "Thursday" if task.thursday %>
            <%= "Friday" if task.friday %>
            <%= "Saturday" if task.saturday %>
            <%= "Sunday" if task.sunday %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
