<div class="flex justify-center items-center min-h-screen">
    <div class="grid gap-8 m:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-7 w-[80vw]">
        <% @widgets.each do |widget| %>
              <div class="col-span-<%=widget.width%> row-span-<%=widget.height%> shadow-center rounded-lg card bg-secondary flex p-3 items-center justify-center text-white relative">
                <%= render "midgets/#{widget.category}", service: WidgetsService.new.call(widget) %>
                <button class="absolute top-2 right-2" onclick="my_modal_<%=widget.id%>.showModal()"><%= lucide_icon("expand") %></button>
              </div>
            <!-- You can open the modal using ID.showModal() method -->
            <dialog id="my_modal_<%=widget.id%>" class="modal">
              <div class="modal-box w-[80vw] h-[80vh] max-w-full flex flex-col">
                <div class="grow">
                  <%= render "bidgets/#{widget.category}", service: WidgetsService.new.call(widget) %>
                </div>
                <div class="modal-action">
                  <form method="dialog">
                    <!-- if there is a button, it will close the modal -->
                    <button class="btn">Close</button>
                  </form>
                </div>
              </div>
            </dialog>
        <% end %>
    </div>
    <div class="flex justify-center flex-col ml-8 flex-1 setting-layout pt-24">
    <div class="form-control">
      <label class="label cursor-pointer gap-4">
        <span class="label-text">Default</span>
        <input type="radio" name="theme-radios" class="radio theme-controller" value="default" />
      </label>
    </div>
    <div class="form-control">
      <label class="label cursor-pointer gap-4">
        <span class="label-text">Retro</span>
        <input type="radio" name="theme-radios" class="radio theme-controller" value="retro" />
      </label>
    </div>
    <div class="form-control">
      <label class="label cursor-pointer gap-4">
        <span class="label-text">Cyberpunk</span>
        <input type="radio" name="theme-radios" class="radio theme-controller" value="cyberpunk" />
      </label>
    </div>
    <div class="form-control">
      <label class="label cursor-pointer gap-4">
        <span class="label-text">Pastel</span>
        <input type="radio" name="theme-radios" class="radio theme-controller" value="pastel" />
      </label>
    </div>
    <div class="form-control">
      <label class="label cursor-pointer gap-4">
        <span class="label-text">Aqua</span>
        <input type="radio" name="theme-radios" class="radio theme-controller" value="aqua" />
      </label>
    </div>
