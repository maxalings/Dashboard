<div class="card p-4 rounded-lg max-w-md mx-auto">
  <!-- Section Title -->
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Mark the Next Race</h1>
  <%= turbo_frame_tag "new_race" do %>
  <% if service.races.last.present? %>
  <%= render "races/show", service: service %>
  <% else %>
  <p class="mb-6 text-gray-600">Set up your next race date below: </p>
  <form action="/widgets/<%= service.widget.id %>/races" method="POST">
    <!-- Dropdown Section -->
    <div class="grid grid-cols-3 gap-4 mb-4">
      <!-- Day Dropdown -->
      <select name="day" class="w-full p-2 border border-purple-dark rounded-md focus:ring focus:ring-blue-300">
        <option value="" disabled selected>Day</option>
        <% (1..31).each do |day| %>
          <option value="<%= day %>"><%= day %></option>
        <% end %>
      </select>

      <!-- Month Dropdown -->
      <select name="month" class="w-full p-2 border border-purple-dark rounded-md focus:ring focus:ring-blue-300">
        <option value="" disabled selected>Month</option>
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>

      <!-- Year Dropdown -->
      <select name="year" class="w-full p-2 border border-purple-dark rounded-md focus:ring focus:ring-blue-300">
        <option value="" disabled selected>Year</option>
        <% (2024..2030).each do |year| %>
          <option value="<%= year %>"><%= year %></option>
        <% end %>
      </select>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <button type="submit" class="bg-purple-dark text-white px-6 py-2 rounded-md shadow hover:bg-red-800 focus:ring focus:ring-blue-300">
        Mark
      </button>
    </div>
  </form>
  <% end %>
  <% end %>
</div>
