
<div class="card bg-white shadow-xl w-1/3 p-4">
  <h2 class="text-xl font-semibold mb-4">The Next Race Date</h2>
  <%= turbo_frame_tag "new_race" do %>
  <form action="/widgets/<%= @widget.id %>/new_race" method="POST">
    <!-- Date Dropdowns -->
    <div class="flex space-x-4">
      <!-- Day Dropdown -->
      <select name="day" class="w-1/3 p-2 border border-gray-300 rounded-md">
        <option value="">Day</option>
        <% (1..31).each do |day| %>
          <option value="<%= day %>"><%= day %></option>
        <% end %>
      </select>

      <!-- Month Dropdown -->
      <select name="month" class="w-1/3 p-2 border border-gray-300 rounded-md">
        <option value="">Month</option>
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>

      <!-- Year Dropdown -->
      <select name="year" class="w-1/3 p-2 border border-gray-300 rounded-md">
        <option value="">Year</option>
        <option value="2024">2024</option>
        <option value="2025">2025</option>
        <option value="2026">2026</option>
        <option value="2027">2027</option>
        <!-- Add more options for years -->
      </select>
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
  <% end %>
</div>
