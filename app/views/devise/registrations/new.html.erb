<section class="lg:mb-24 mt-[150px] h-screen">
    <div>
      <div class="w-5/12 m-auto text-center">

        <h1 class="mb-3">Get started today !</h1>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Et libero nulla eaque error neque ipsa culpa autem, at itaque nostrum!</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "my-8 w-9/12 mx-auto text-left" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="mt-5 grid grid-cols-2 gap-3">
              <label class="input shadow-center flex items-center gap-2 rounded-lg">
                <%= f.text_field :first_name, autofocus: true, class: "grow", placeholder: "First name" %>
              </label>
              <label class="input shadow-center flex items-center gap-2 rounded-lg">
                <%= f.text_field :last_name, autofocus: true, class: "grow", placeholder: "Last name" %>
              </label>
            </div>
            <div class="mt-5">
              <label class="input shadow-center flex items-center gap-2 rounded-lg">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "grow", placeholder: "email" %>
                <%= lucide_icon("mail", "class" => "h-4 w-4 text-gray-500") %>
              </label>
            </div>
            <div class="mt-5">
              <label class="input mt-2 shadow-center flex items-center gap-2 rounded-lg">
                <%= f.password_field :password, autocomplete: "current-password", class: "grow", placeholder: "Password" %>
                <%= lucide_icon("lock", "class" => "h-4 w-4 text-gray-500") %>
              </label>
              <% if @minimum_password_length %>
              <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>

            <div class="mt-2">
              <label class="input mt-2 shadow-center flex items-center gap-2 rounded-lg">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "grow", placeholder: "Password confirmation" %>
                <%= lucide_icon("lock", "class" => "h-4 w-4 text-gray-500") %>
              </label>
            </div>

            <div class="">
              <p class="text-xs text-gray-500 pt-2">
                By creating an account, you agree to our
                <a href="#" class="text-gray-500 underline"> terms and conditions </a>
                and
                <a href="#" class="text-gray-500 underline">privacy policy</a>.
              </p>
            </div>

            <div>
              <%= f.submit "Sign up", class: "btn btn-primary w-full mt-8" %>
              <p class="text-center pt-2 text-sm text-gray-500 sm:mt-0">
                Already have an account?
                <%= link_to "Log in", new_user_session_path, class: "text-gray-500 underline" %>.
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
