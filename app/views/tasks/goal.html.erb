<%= turbo_frame_tag "new_goal" do %>
  Please input the amount of distance you would like to log:
  <%= form_with(model: @task, url: widget_new_goal_path, method: :post, class: "card m-5") do |f| %>
   <%= f.text_field :title,
      class: "w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-800 p-3 mb-4",
      placeholder: "Enter new task...",
      required: true
    %>
    km
  <% end %>

  <div class="mt-6 flex justify-center">
      <button class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
      data-controller="new-routine" data-action="click->new-routine#back" >
      Log</button>
  </div>

<% end %>
