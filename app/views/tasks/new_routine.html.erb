<%= turbo_frame_tag "new_routine" do %>
  <%= form_with(model: @task, url: widget_new_routine_path, method: :post, class: "flex flex-col items-center m-5 gap-y-3") do |f| %>
    <%= f.text_field :title,
      class: "rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500",
      placeholder: "Enter new task...",
      required: true
    %>

    <div class="flex flex-col gap-2">
      <span class="text-gray-700">Select Days:</span>
      <% ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"].each do |day| %>
        <label class="inline-flex items-center space-x-2">
          <%= f.check_box day.downcase.to_sym,
            class: "form-checkbox h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500" %>
          <span><%= day %></span>
        </label>
      <% end %>
    </div>

    <%= f.submit "Add Task",
      class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
    %>
  <% end %>
<% end %>
