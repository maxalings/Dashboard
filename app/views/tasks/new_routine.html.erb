<%= turbo_frame_tag "new_routine" do %>
  <%= form_with(model: @task, url: widget_new_routine_path, method: :post, class: "card bg-white p-6 rounded-lg") do |f| %>
    <h2 class="text-2xl font-semibold text-gray-800">Create New Routine</h2>

    <!-- Task Title Input -->
    <%= f.text_field :title,
      class: "w-full rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-800 p-3 mb-4",
      placeholder: "Enter new task...",
      required: true
    %>

    <!-- Select Days Section -->
    <div class="flex flex-col gap-4 mb-6">
      <span class="text-lg text-gray-700">Select Days:</span>
      <% ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"].each do |day| %>
        <label class="inline-flex items-center space-x-2">
          <%= f.check_box day.downcase.to_sym,
            class: "form-checkbox h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500" %>
          <span class="text-sm text-gray-600"><%= day %></span>
        </label>
      <% end %>
    </div>

    <!-- Submit Button -->
    <div class="mt-6 flex justify-center">
      <%= f.submit "Add Routine",
        class: "px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
      %>
    </div>
  <% end %>
<% end %>
